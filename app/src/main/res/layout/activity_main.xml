<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_ellipsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/label_ellipsize" />

    <Button
        android:id="@+id/btn_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/label_extra" />

    <me.kareluo.intensify.gridview.IntensifyGridView
        android:id="@+id/igv_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?colorAccent"
        android:orientation="vertical"
        app:blockSize="match_parent"
        app:blockType="square"
        app:ellipsize="end"
        app:horizontalSpacing="4dp"
        app:maxLines="30"
        app:spacer="?colorAccent"
        app:spacingGravity="share"
        app:spanCount="4"
        app:verticalSpacing="4dp" />

</LinearLayout>
